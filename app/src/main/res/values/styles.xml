<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_header_name_20</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/text_header_name</item>
    </style>

    <style name="StyleSections20" parent="StyleTitle20">
        <item name="android:textColor">@color/text_sections_name</item>
    </style>

    <style name="StyleWhiteTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_font_size_14</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleContentInCategories12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_font_size_12</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="StyleContentInIngredients14" parent="StyleContentInCategories12">
        <item name="android:textSize">@dimen/text_font_size_14</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleContentInMethod14" parent="StyleContentInIngredients14">
        <item name="textAllCaps">false</item>
    </style>

    <style name="StyleSubtitle16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_subtitle_16</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textColor">@color/text_subtitle</item>
    </style>

    <style name="StyleVioletTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_font_size_14</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/text_header_name</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleWhiteTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_header_and_button_name_10</item>
        <item name="android:paddingHorizontal">@dimen/padding_header_and_button_name_10</item>
        <item name="cornerRadius">@dimen/main_space_8</item>
    </style>
</resources>